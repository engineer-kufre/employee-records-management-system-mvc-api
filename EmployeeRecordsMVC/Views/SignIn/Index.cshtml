@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
}

<form class="form-signin signin-form" method="post" asp-action="Index" asp-controller="SignIn" enctype="multipart/form-data">
    <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" id="inputEmail" class="form-control" placeholder="Enter Email Address">
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" id="inputPassword" class="form-control" placeholder="Enter Password">
        @if (ViewBag.NotValid == "Invalid credentials!")
        {
            <span asp-validation-for="Password" class="star">Invalid credentials!</span>
        }
    </div>

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" asp-for="RememberMe" value=true> Remember me
        </label>

        <a asp-action="Index" method="get" asp-controller="SignUp" >Sign Up Now</a>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
</form>